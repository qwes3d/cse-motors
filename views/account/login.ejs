


<%- include('../partials/header', { title: 'Login' }) %>


<main>
  <h1><%= title %></h1>

   <% if (messages.error && messages.error.length) { %>
    <div class="flash-message error">
      <p><%= messages.error[0] %></p>
    </div>
  <% } %>

   <% if (messages.success && messages.success.length) { %>
    <div class="flash-message success">
      <p><%= messages.success[0] %></p>
    </div>
  <% } %>

  <form action="/account/login" method="POST">
    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" required>

    <label for="account_password">Password:</label>
    <input type="password" id="account_password" name="hashed_password" required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

      <p class="note">Password must be at least 12 characters long, include 1 uppercase letter, 1 number, and 1 special character.</p>

    <button type="submit">Login</button>
  </form>

  <p>Don't have an account? <a href="/account/register">Register here</a></p>
</main>
